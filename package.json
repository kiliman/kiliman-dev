{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "clean": "rm -rf dist build public/build",
    "build": "npm run css:build && remix build --sourcemap && node ./scripts/generate-build-info.js",
    "dev": "npm run clean && pm2-dev ./pm2.config.js",
    "postinstall": "remix setup cloudflare-workers",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "start": "miniflare --build-command \"npm run dev:worker\" --watch",
    "css:build": "tailwindcss -i styles/tailwind.css -o app/styles/tailwind.css --minify",
    "css:watch": "tailwindcss -i styles/tailwind.css -o app/styles/tailwind.css --watch",
    "content:watch": "dotenv -e scripts/mdx/.env -- node scripts/watch-content.js --force",
    "debug": "miniflare --inspect --build-command \"npm run dev:worker\" --watch",
    "deploy": "npm run build && wrangler publish",
    "act": "act compile-mdx -j compile --secret-file .env"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@remix-run/cloudflare-workers": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "clsx": "^1.1.1",
    "mdx-bundler": "^8.0.1",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "remix-utils": "^2.3.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@remix-run/dev": "^1.1.1",
    "@tailwindcss/typography": "^0.5.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "chokidar": "^3.5.2",
    "cssnano": "^5.0.14",
    "dotenv-cli": "^4.1.1",
    "esbuild": "0.13.14",
    "esbuild-runner": "^2.2.1",
    "miniflare": "2.0.0-next.3",
    "node-fetch": "^2.6.6",
    "patch-package": "^6.4.7",
    "pm2": "^5.1.2",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.10",
    "typescript": "^4.1.2",
    "ws": "^8.4.0"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
