{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "main": "build/index.js",
  "scripts": {
    "postinstall": "remix setup cloudflare-workers",
    "clean": "rm -rf dist build public/build",
    "build": "npm run clean && cross-env NODE_ENV=production run-p build:*",
    "build:css": "tailwindcss -i styles/tailwind.css -o app/styles/tailwind.css --minify",
    "build:remix": "sleep 2 && remix build --sourcemap",
    "build:info": "node ./scripts/generate-build-info.js",
    "dev": "npm run clean && run-p dev:*",
    "dev:remix": "remix watch",
    "dev:miniflare": "sleep 2 && miniflare ./build/index.js --watch --kv-persist",
    "dev:css": "tailwindcss -i styles/tailwind.css -o app/styles/tailwind.css --watch",
    "watch:content": "dotenv -e scripts/mdx/.env -- node scripts/watch-content.js --force",
    "start": "cross-env NODE_ENV=production miniflare /build/index.js --kv-persist",
    "deploy": "npm run build && wrangler publish",
    "act": "act compile-mdx -j compile --secret-file .env"
  },
  "dependencies": {
    "@code-hike/mdx": "^0.7.3",
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@remix-run/cloudflare": "^1.6.7",
    "@remix-run/cloudflare-workers": "^1.6.7",
    "@remix-run/react": "^1.6.7",
    "clsx": "^1.1.1",
    "mdx-bundler": "^8.0.1",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix-utils": "^3.3.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@remix-run/dev": "^1.6.7",
    "@remix-run/eslint-config": "^1.6.7",
    "@tailwindcss/typography": "^0.5.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.14",
    "dotenv-cli": "^6.0.0",
    "esbuild": "^0.14.22",
    "esbuild-runner": "^2.2.1",
    "eslint": "^8.21.0",
    "miniflare": "^2.6.0",
    "node-fetch": "^2.6.6",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.10",
    "typescript": "^4.7.4",
    "wrangler": "^2.0.24",
    "ws": "^8.4.0"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
